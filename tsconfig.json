{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
